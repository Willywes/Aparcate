<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/ic_bg"
        tools:context=".LoginActivity">


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="4dp"
            android:layout_margin="50dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" android:layout_marginBottom="10dp">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginBottom="20dp">

                <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:srcCompat="@drawable/ic_logo_blue"
                        android:id="@+id/imageView" android:contentDescription="APARCATE"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="APARCATE"
                          android:textSize="24sp"
                          android:layout_marginLeft="10dp"
                          android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <TextView
                    android:text=" ACCESSO USUARIOS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/errorLogin" android:gravity="center"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_marginBottom="10dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="20"
                    android:id="@+id/emailLogin"
                    android:layout_marginBottom="15dp"
                    android:hint="E-Mail"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:drawablePadding="10dp" android:layout_marginLeft="30dp" android:layout_marginRight="30dp"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/passLogin"
                    android:layout_marginBottom="15dp"
                    android:hint="Password"
                    android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
                    android:drawablePadding="10dp" android:layout_marginLeft="30dp" android:layout_marginRight="30dp"/>

            <Button
                    android:text="Iniciar SesiÃ³n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnLogin"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/btn_rounded"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="30dp" android:layout_marginRight="30dp"/>
            <Button
                    android:text="Crear Cuenta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnNewAccount"
                    android:background="@null"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="5dp" android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>